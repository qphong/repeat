#!/bin/bash
# states, tags, by, direction
# default: list by number of studies, newest first

BASEDIR=$(dirname $0)
source "${BASEDIR}"/vy-config

STATES="all"
TAGS="all"
BY="view"
DIRECTION="inc"

while getopts ":s:t:b:d:" opt; do
  case $opt in
    s) STATES="$OPTARG"
    ;;
    t) TAGS="$OPTARG"
    ;;
    b) BY="$OPTARG"
    ;;
    d) DIRECTION="$OPTARG"
    ;;
    \?) echo "Invalid option -$OPTARG" >&2
    exit 1
    ;;
  esac
done

echo -e "$(python ../main.py --subject $SUBJECT -c list --states $STATES --tags $TAGS --by $BY --direction $DIRECTION)" | fzf --cycle --ansi

