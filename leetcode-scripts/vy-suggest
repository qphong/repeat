#!/bin/sh

tag="$(echo -e "$(python ../main.py --subject leetcode -c list_tag --states studied)" | fzf --ansi | awk -F ':' '{print $1}')"
if [[ "$tag" == "" ]]
then
	echo "Haven't completed any study"
	exit 0
fi

item="$(echo -e "$(python ../main.py --subject leetcode -c review --tags "$tag" --states studied)" | fzf --ansi)"

identifier="$(echo "$item" | awk -F ']' '{print $1}' | sed 's/[^[:alnum:]]//g')"
name="$(echo "$item" | awk -F ']' '{print $2}' | awk -F "\"" '{print $2}' | sed 's/[^[:alnum:]-]//g')"

if [ "$item" != "" ]
then
	PATHTOCODE="$(python ../main.py --subject leetcode -c get_file -i "$identifier" --postfix "code.py")"

	python ../main.py --subject leetcode -c start -i "$identifier" \
		&& echo "# $identifier. $name" >> $PATHTOCODE \
		&& echo "Start coding $identifier($name) at $PATHTOCODE" \
		&& neovide "$PATHTOCODE"
fi

